{
  "$schema": "http://json.schemastore.org/package",
  "private": true,
  "name": "@siteimprove/alfa",
  "homepage": "https://alfa.siteimprove.com",
  "license": "MIT",
  "description": "Suite of open and standards-based tools for performing reliable accessibility conformance testing at scale",
  "repository": {
    "type": "git",
    "url": "github:Siteimprove/alfa"
  },
  "bugs": "https://github.com/siteimprove/alfa/issues",
  "scripts": {
    "build": "node --max-old-space-size=8192 scripts/build.mjs --pretty",
    "clean": "node scripts/clean.mjs --pretty",
    "test": "yarn build && vitest run --config ./config/vitest.config.ts",
    "#coverage:comment": "We use --coverage.enabled instead of --coverage to allow overriding options in the CLI. See warning at https://vitest.dev/config/#coverage",
    "coverage": "yarn build && vitest run --coverage.enabled --config ./config/vitest.config.ts",
    "#coverage:package:comment": "Run coverage for a single package. Usage: yarn workspace @siteimprove/alfa-foo coverage:package. We don't rebuild the project, so make sure to run `yarn build` first.",
    "coverage:package": "vitest run --coverage.enabled --config ./config/vitest.config.ts --coverage.reportsDirectory ${INIT_CWD}/docs/coverage --coverage.include $(echo ${INIT_CWD} | sed \"s+$(pwd)/++\") ${INIT_CWD}",
    "watch": "node scripts/watch.mjs --pretty",
    "extract": "node scripts/api-extractor.mjs --pretty",
    "extract:self": "CI=false yarn extract ${INIT_CWD}",
    "depgraph:self": "yarn generate-dependency-graphs $(pwd) $(echo ${INIT_CWD} | sed \"s+$(pwd)/packages/++\")",
    "document": "api-documenter generate -i docs/data/api -o docs/api",
    "knip": "knip --config config/knip.ts --no-config-hints"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@microsoft/api-documenter": "^7.28.9",
    "@microsoft/api-extractor": "^7.52.10",
    "@siteimprove/alfa-toolchain": "workspace:^0.111.0",
    "@types/node": "^25.2.3",
    "@vitest/coverage-v8": "^4.0.18",
    "knip": "^5.83.1",
    "minimist": "^1.2.6",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "packageManager": "yarn@4.12.0"
}
