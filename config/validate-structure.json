{
  "has-api-extractor-config": true,
  "validate-changesets": true,
  "forbid-major": true,
  "validate-package-json": {
    "organisation": "@siteimprove",
    "homepage": "https://alfa.siteimprove.com",
    "repo": "github:Siteimprove/alfa",
    "bugs": "https://github.com/siteimprove/alfa/issues",
    "noExternalDeps": true,
    "allowedExternalDeps": {
      "@siteimprove/alfa-compatibility": ["browserslist"],
      "@siteimprove/alfa-test": ["vitest"],
      "@siteimprove/alfa-test-deprecated": ["chalk"],
      "@siteimprove/alfa-toolchain": [
        "@changesets/assemble-release-plan",
        "@changesets/config",
        "@changesets/get-github-info",
        "@changesets/git",
        "@changesets/read",
        "@manypkg/get-packages",
        "@ts-graphviz/adapter",
        "@svitejs/changesets-changelog-github-compact",
        "axios",
        "chalk",
        "json-stringify-pretty-compact",
        "madge",
        "resolve-from",
        "simple-git",
        "ts-graphviz"
      ]
    }
  },
  "validate-workspace-tsconfig": true,
  "is-in-clusters": true
}
