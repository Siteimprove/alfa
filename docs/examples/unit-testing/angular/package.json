{
  "private": true,
  "name": "unit-testing-angular",
  "version": "0.7.0",
  "scripts": {
    "test": "jest"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "setupFilesAfterEnv": [
      "jest-preset-angular",
      "./setup.js"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "<rootDir>/tsconfig.json"
      }
    },
    "transformIgnorePatterns": [
      "^.+\\.js$"
    ],
    "moduleFileExtensions": [
      "js"
    ]
  },
  "dependencies": {
    "@angular/common": "^8.2.0",
    "@angular/compiler": "^8.2.0",
    "@angular/core": "^8.2.0",
    "@angular/platform-browser": "^8.2.0",
    "@angular/platform-browser-dynamic": "^8.2.0",
    "core-js": "^3.1.1",
    "rxjs": "^6.5.2",
    "zone.js": "^0.9.1"
  },
  "devDependencies": {
    "@siteimprove/alfa-angular": "^0.7.0",
    "@siteimprove/alfa-jest": "^0.7.0",
    "@types/jest": "^24.0.13",
    "jest": "^24.8.0",
    "jest-preset-angular": "^7.1.1"
  }
}
