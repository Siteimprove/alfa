{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "mutate": [
    "packages/alfa-act/src/**/*.ts",
    "packages/alfa-affine/src/**/*.ts",
    "packages/alfa-applicative/src/**/*.ts",
    "packages/alfa-aria/src/**/*.ts",
    "packages/alfa-array/src/**/*.ts"
  ],
  "buildCommand": "sh scripts/stryker-build.sh",
  "commandRunner": { "command": "yarn stryker-test" },
  "coverageAnalysis": "off",
  "timeoutMS": 600000,
  "checkers": ["typescript"],
  "symlinkNodeModules": false,
  "incremental": true,
  "tsconfigFile": ".stryker/tsconfig.json",
  "htmlReporter": {
    "fileName": "docs/mutation-report.html"
  },
  "incrementalFile": ".stryker/incremental.json",
  "thresholds": {
    "high": 80,
    "low": 60,
    "break": 40
  }
}
