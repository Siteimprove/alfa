    "bin/**/*.d.ts"
  ],
  "oclif": {
    "commands": "./bin/alfa/commands",
    "bin": "alfa"
  },
  "dependencies": {
    "@oclif/command": "^1.5.19",
    "@oclif/config": "^1.13.3",
    "@oclif/plugin-help": "^2.2.1",
    "@siteimprove/alfa-act": "^0.1.0",
    "@siteimprove/alfa-device": "^0.1.0",
    "@siteimprove/alfa-formatter": "^0.1.0",
    "@siteimprove/alfa-formatter-earl": "^0.1.0",
    "@siteimprove/alfa-formatter-json": "^0.1.0",
    "@siteimprove/alfa-rules": "^0.1.0",
    "@siteimprove/alfa-scraper": "^0.1.0",
    "@siteimprove/alfa-time": "^0.1.0",
    "@siteimprove/alfa-web": "^0.1.0",
    "enquirer": "^2.3.0",
    "tempy": "^0.5.0"
  },
  "devDependencies": {
    "@siteimprove/alfa-test": "^0.1.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://npm.pkg.github.com/"
  }
}
